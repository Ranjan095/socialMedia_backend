generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  firstName String   @db.VarChar(50)
  lastName  String?  @db.VarChar(50)
  mobile    String   @db.VarChar(15)
  email     String
  dob       DateTime
  password  String
  country   String
  state     String
  city      String
  createdAt DateTime @default(now())
}
